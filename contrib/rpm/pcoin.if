interface(`pcoin_manage_lib_files',`
	gen_require(`
		type pcoin_var_lib_t;
	')

	files_search_var_lib($1)
	manage_files_pattern($1, pcoin_var_lib_t, pcoin_var_lib_t)
')

########################################
## <summary>
##	Manage pcoin lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`pcoin_manage_lib_dirs',`
	gen_require(`
		type pcoin_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, pcoin_var_lib_t, pcoin_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a pcoin environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`pcoin_admin',`
	gen_require(`
		type pcoin_t;
		type pcoin_initrc_exec_t;
		type pcoin_var_lib_t;
	')

	allow $1 pcoin_t:process { ptrace signal_perms };
	ps_process_pattern($1, pcoin_t)

	pcoin_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 pcoin_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, pcoin_var_lib_t)

')

